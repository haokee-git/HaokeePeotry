<Window
    x:Class="HaokeePeotry.EditPoetryWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="编辑诗词">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:ConnectionId='2' x:Name="TitleTextBox" Grid.Row="0" Margin="10" PlaceholderText="标题"/>
        <TextBox x:ConnectionId='3' x:Name="AuthorTextBox" Grid.Row="1" Margin="10" PlaceholderText="作者"/>
        <TextBox x:ConnectionId='4' x:Name="ContentTextBox" Grid.Row="2" Margin="10" Height="300" PlaceholderText="内容" AcceptsReturn="True" TextWrapping="Wrap"/>

        <Button x:ConnectionId='5' x:Name="EditButton" Grid.Row="3" Content="修改" HorizontalAlignment="Center" Margin="10"                         />
    </Grid>
</Window>

